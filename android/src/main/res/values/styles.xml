<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NativeDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>

    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_animation</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_animation</item>
    </style>

    <style name="TransparentBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>